#join
sentence = "!"
new_sentence = sentence.join(["hi", "my", "name", "is", "Jojo"])
print(new_sentence)

new_sentence_2 = "".join(["hi", "my", "name", "is", "Jojo"])
print(new_sentence_2)

# list unpacking
a,b,c, *other = [1,2,3, 4,5,6,7,8,8]
a,b,c, *other,d = [1,2,3, 4,5,6,7,8,8]
a,b,c = 1,2,3
print(a)
print(b)
print(c)
print(d)
print(other)
